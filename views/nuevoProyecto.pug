extends layout

block contenido
    .contenido-principal
        h1 #{nomePagina}
        
        if(errors)
            each error in errors
                .alerta= error.texto

        form.agregar-proyecto(action="/nuevo-proyecto" method="POST")
            .campo
                label(for="nombre") Nome Projeto: 
                input(type="text" id="nombre" name="nombre" placeholder="Nome Projeto")
            .campo.enviar
                input(type="submit" value="Enviar" class="boton")